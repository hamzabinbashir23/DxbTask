<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".presentation.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imvCircular"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:src="@drawable/banner2x"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    app:layout_constraintHorizontal_bias="0.5"

                    app:shapeAppearanceOverlay="@style/SpecificCornerRounded"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/laundary_ic2x"/>


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/menu_ic2x"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="-40dp">

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view_outer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    card_view:cardBackgroundColor="@color/lightBlue"
                    card_view:cardCornerRadius="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginHorizontal="20dp"
                    card_view:cardElevation="3dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/order_iv"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:src="@drawable/main_fragment_order2x"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_toEndOf="@+id/order_iv"
                            android:layout_marginStart="10dp"
                            android:text="Orders"
                            android:textColor="@color/darkBlue"
                            android:textSize="14sp"
                            android:gravity="center"/>


                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:background="@drawable/circular_bg"
                            android:layout_centerInParent="true"
                            android:src="@drawable/forword_ic_white"
                            android:backgroundTint="@color/darkBlue"
                            android:padding="8dp"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>




                </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    card_view:cardBackgroundColor="@color/darkBlue"
                    card_view:cardCornerRadius="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginHorizontal="20dp"
                    card_view:cardElevation="3dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/how_it_works_iv"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:src="@drawable/howitworks2x"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_toEndOf="@+id/how_it_works_iv"
                            android:layout_marginStart="10dp"
                            android:text="How It Works"
                            android:textSize="14sp"
                            android:textColor="@color/lightBlue"
                            android:textAllCaps="true"
                            android:gravity="center"/>


                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:background="@drawable/circular_bg"
                            android:layout_centerInParent="true"
                            android:src="@drawable/forword_ic_white"
                            android:backgroundTint="@color/lightBlue"
                            android:padding="8dp"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>




                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    card_view:cardBackgroundColor="@color/lightBlue"
                    card_view:cardCornerRadius="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginHorizontal="20dp"
                    card_view:cardElevation="3dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/about_us_iv"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:src="@drawable/chat2x"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_toEndOf="@+id/about_us_iv"
                            android:layout_marginStart="10dp"
                            android:text="About Us"
                            android:textSize="14sp"
                            android:textColor="@color/darkBlue"
                            android:textAllCaps="true"
                            android:gravity="center"/>


                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:background="@drawable/circular_bg"
                            android:layout_centerInParent="true"
                            android:src="@drawable/forword_ic_white"
                            android:backgroundTint="@color/darkBlue"
                            android:padding="8dp"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>




                </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    card_view:cardBackgroundColor="@color/darkBlue"
                    card_view:cardCornerRadius="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginHorizontal="20dp"
                    card_view:cardElevation="3dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/contact_us_iv"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:src="@drawable/contact2x"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_toEndOf="@+id/contact_us_iv"
                            android:layout_marginStart="10dp"
                            android:text="Contact Us"
                            android:textColor="@color/lightBlue"
                            android:textSize="14sp"
                            android:textAllCaps="true"
                            android:gravity="center"/>


                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:background="@drawable/circular_bg"
                            android:backgroundTint="@color/lightBlue"
                            android:layout_centerInParent="true"
                            android:src="@drawable/forword_ic_white"
                            android:padding="8dp"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>




                </androidx.cardview.widget.CardView>




            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>